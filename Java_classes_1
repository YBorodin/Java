class Box {
        int width;  // ширина коробки - переменная
        int height; // высота коробки
        int depth;  // глубина коробки

        // устанавливаем размеры коробки
        Box(int w, int h, int d) { //конструктор класса Box
            width = w;
            height = h;
            depth = d;
        }

        // вычисляем объём коробки
        int getVolume() {   // метод вычисления объема коробки
            return width * height * depth;
        }
    }

    class BoxCreate {
        // метод main() исполняет специфическую задачу. 
        //Это место с которого начинается выполнение всех приложений Java.
        public static void main(String args[]) { 
            /*
            Box b; // определение объекта
            b = new Box(1, 2, 3); // инициализация объекта */
            Box b = new Box(1, 2, 3); // но лучше определение и инициализацию делать в одной строке
        
            System.out.println("Box Volume = " + b.width + b.height + b.depth);
        }
    }
    
